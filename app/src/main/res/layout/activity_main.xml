<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAB8B8"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="170dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/radius"
        android:onClick="onClickStopTest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextNumber"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="249dp"
            android:layout_height="71dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:autofillHints=""
            android:backgroundTint="#C30606"
            android:ems="10"
            android:hint="@string/_0000_0000_0000_0000"
            android:inputType="number"
            android:maxLength="16"
            android:textColor="#FF6A6767"
            android:textColorHint="#FF6A6767"
            android:textColorLink="#D80547"
            android:textSize="23sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#423E3E"
            android:onClick="onClickLogin"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:text="@string/card_number"
            android:textColor="#FF6A6767"
            android:textSize="19sp" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>